<div class="container mt-3 p-3 bg-light">

<h1 class="mb-4"> Add a review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.submit %>
<% end %>

<p class="mt-5"> <%= link_to 'Back to the list', restaurant_path(@restaurant), class: "btn btn-success" %> </p>

</div>
